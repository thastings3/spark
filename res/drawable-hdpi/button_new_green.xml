<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:duplicateParentState="true">
    <item
            android:top="@dimen/btn_new_spacing_outer"
            android:right="@dimen/btn_new_spacing_outer"
            android:bottom="@dimen/btn_new_spacing_outer"
            android:left="@dimen/btn_new_spacing_outer">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/btn_new_radius"
                     android:bottomRightRadius="@dimen/btn_new_radius"
                     android:topLeftRadius="@dimen/btn_new_radius"
                     android:topRightRadius="@dimen/btn_new_radius"
                    />
            <gradient android:angle="-90"
                      android:startColor="#99000000"
                      android:endColor="#66FFFFFF" />
        </shape>
    </item>
    <item
            android:top="@dimen/btn_new_spacing_middle"
            android:right="@dimen/btn_new_spacing_middle"
            android:bottom="@dimen/btn_new_spacing_middle"
            android:left="@dimen/btn_new_spacing_middle">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/btn_new_radius"
                     android:bottomRightRadius="@dimen/btn_new_radius"
                     android:topLeftRadius="@dimen/btn_new_radius"
                     android:topRightRadius="@dimen/btn_new_radius"
                    />
            <solid
                    android:color="@color/btn_green" />
        </shape>
    </item>
    <item
            android:top="@dimen/btn_new_spacing_middle"
            android:right="@dimen/btn_new_spacing_middle"
            android:bottom="@dimen/btn_new_spacing_middle"
            android:left="@dimen/btn_new_spacing_middle">
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/btn_new_radius"
                             android:bottomRightRadius="@dimen/btn_new_radius"
                             android:topLeftRadius="@dimen/btn_new_radius"
                             android:topRightRadius="@dimen/btn_new_radius"
                            />
                    <gradient android:angle="-90"
                              android:startColor="#99000000"
                              android:endColor="#99FFFFFF" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/btn_new_radius"
                             android:bottomRightRadius="@dimen/btn_new_radius"
                             android:topLeftRadius="@dimen/btn_new_radius"
                             android:topRightRadius="@dimen/btn_new_radius"
                            />
                    <gradient android:angle="-90"
                              android:startColor="#CCFFFFFF"
                              android:endColor="#66000000" />
                </shape>
            </item>
        </selector>
    </item>


    <!-- Button Center -->
    <item
            android:top="@dimen/btn_new_spacing_inner"
            android:right="@dimen/btn_new_spacing_inner"
            android:bottom="@dimen/btn_new_spacing_inner"
            android:left="@dimen/btn_new_spacing_inner">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/btn_new_radius"
                     android:bottomRightRadius="@dimen/btn_new_radius"
                     android:topLeftRadius="@dimen/btn_new_radius"
                     android:topRightRadius="@dimen/btn_new_radius"
                    />
            <solid
                    android:color="@color/btn_green" />
        </shape>
    </item>
    <item
            android:top="@dimen/btn_new_spacing_inner"
            android:right="@dimen/btn_new_spacing_inner"
            android:bottom="@dimen/btn_new_spacing_inner"
            android:left="@dimen/btn_new_spacing_inner">
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/btn_new_radius"
                             android:bottomRightRadius="@dimen/btn_new_radius"
                             android:topLeftRadius="@dimen/btn_new_radius"
                             android:topRightRadius="@dimen/btn_new_radius"
                            />
                    <gradient android:angle="-90"
                              android:startColor="#33000000"
                              android:centerColor="#11000000"
                              android:endColor="#33FFFFFF" />
                    <padding
                            android:top="10dp"
                            android:right="10dp"
                            android:bottom="10dp"
                            android:left="10dp"
                            />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/btn_new_radius"
                             android:bottomRightRadius="@dimen/btn_new_radius"
                             android:topLeftRadius="@dimen/btn_new_radius"
                             android:topRightRadius="@dimen/btn_new_radius"
                            />
                    <gradient android:angle="-90"
                              android:startColor="#33FFFFFF"
                              android:centerColor="#11000000"
                              android:endColor="#33000000" />
                    <padding
                            android:top="10dp"
                            android:right="10dp"
                            android:bottom="10dp"
                            android:left="10dp"
                            />
                </shape>
            </item>
        </selector>
    </item>

</layer-list>